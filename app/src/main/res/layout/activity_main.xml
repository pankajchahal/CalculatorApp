<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="24dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp"
        android:background="@color/display_bg"
        android:fontFamily="sans-serif-medium"
        android:gravity="end|center_vertical"
        android:padding="20dp"
        android:text="0"
        android:textColor="@color/text_primary"
        android:textSize="48sp" />

    <!-- Memory row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMC"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_memory"
            android:text="MC"
            android:textColor="@color/text_secondary" />

        <Button
            android:id="@+id/btnMR"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_memory"
            android:text="MR"
            android:textColor="@color/text_secondary" />

        <Button
            android:id="@+id/btnMPlus"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_memory"
            android:text="M+"
            android:textColor="@color/text_secondary" />

        <Button
            android:id="@+id/btnMMinus"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_memory"
            android:text="M-"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Function row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSqrt"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="√"
            android:textColor="@color/text_secondary" />

        <Button
            android:id="@+id/btnRecip"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="1/x"
            android:textColor="@color/text_secondary" />

        <Button
            android:id="@+id/btnOpen"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="("
            android:textColor="@color/text_secondary" />

        <Button
            android:id="@+id/btnClose"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text=")"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClear"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="AC"
            android:textColor="@color/text_secondary" />

        <Button
            android:id="@+id/btnBack"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="⌫"
            android:textColor="@color/text_secondary" />

        <Button
            android:id="@+id/btnPercent"
            style="@style/Calc.Button"
            android:layout_weight="1"
                android:background="@drawable/button_operator"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
            android:text="%"
            android:textColor="@color/text_secondary" />

        <Button
            android:id="@+id/btnDiv"
            style="@style/Calc.Button"
            android:layout_weight="1"
                android:background="@drawable/button_operator"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
            android:text="÷"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="7"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btn8"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="8"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btn9"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="9"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btnMul"
            style="@style/Calc.Button"
            android:layout_weight="1"
                android:background="@drawable/button_operator"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
            android:text="×"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="4"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btn5"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="5"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btn6"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="6"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btnSub"
            style="@style/Calc.Button"
            android:layout_weight="1"
                android:background="@drawable/button_operator"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
            android:text="−"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="1"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btn2"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="2"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btn3"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="3"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btnAdd"
            style="@style/Calc.Button"
            android:layout_weight="1"
                android:background="@drawable/button_operator"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
            android:text="+"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <!-- Row 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPlusMinus"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="+/-"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btn0"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="0"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btnDot"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_number"
            android:text="."
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btnEq"
            style="@style/Calc.Button"
            android:layout_weight="1"
            android:background="@drawable/button_operator"
            app:backgroundTint="@null"
            android:text="="
            android:textColor="@color/text_primary" />
    </LinearLayout>

</LinearLayout>